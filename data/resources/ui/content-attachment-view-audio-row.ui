<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="NwtyContentAttachmentViewAudioRow" parent="AdwBin">
    <property name="child">
      <object class="GtkBox">
        <child>
          <object class="GtkLabel">
            <property name="xalign">0</property>
            <property name="hexpand">True</property>
            <binding name="label">
              <lookup name="title">
                <lookup name="attachment">NwtyContentAttachmentViewAudioRow</lookup>
              </lookup>
            </binding>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="playback_button">
            <property name="action-name">audio-row.toggle-playback</property>
            <style>
              <class name="flat"/>
            </style>
          </object>
        </child>
      </object>
    </property>
    <style>
      <class name="content-attachment-view-audio-row"/>
    </style>
  </template>
</interface>
